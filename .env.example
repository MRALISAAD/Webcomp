# backend/.env.example
PORT=5000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT
JWT_SECRET=replace_with_generated_secret
ADMIN_JWT_TTL=1h
ENABLE_ADMIN_REGISTER=false

# Zoho CRM
ZOHO_BASE_URL=https://www.zohoapis.com/crm/v2
ZOHO_OAUTH_TOKEN=replace_with_access_token_or_use_refresh_flow
ZOHO_REFRESH_TOKEN=replace_with_refresh_token
ZOHO_MODULE=Leads

# SMTP
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=no-reply@yourdomain.com
SMTP_PASS=replace_with_smtp_app_password
REPLY_FROM="Marhaba Canada <no-reply@yourdomain.com>"
MAIL_ADMIN=admin@yourdomain.com

# DB
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/YourDB

# Frontend
VITE_API_BASE_URL=http://localhost:5000
